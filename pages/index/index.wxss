/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.task-item{
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
 
}

.task-logo{
  padding: 10px;
}
.task-title{
  
  width: 200px;
}
.task-price{
   position: absolute;
   right: 40px;
   color: red;
   font-size: 12px;
}
.publish{
  position:fixed;
  right: 10px;
  width: 40px;
  height: 40px;
  color: #fff;
  bottom: 20px;
  border-radius: 50%;
  background-color: #1296db;
  box-shadow: 0px 0px 5px #888888;
}

.icon-publish{
  position: absolute;
  width: 50%;
  height: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}