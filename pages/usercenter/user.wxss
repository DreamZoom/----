/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: rgb(57, 125, 230);
  height: 150px;
  justify-content: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.userinfo-nickname {
  color: #fff;
}

.user-actions {
  color: #aaa;
  border-top: solid 1px #eee;
  padding: 10px;
}

.user-actions-hover{
  background-color: #ddd;
}