/**app.wxss**/
@import 'weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  box-sizing: border-box;
}

.width-100 {
  width: 100%;
}

.padding {
  padding: 10px;
}

.margin {
  margin: 10px;
}

.list-group {
  background-color: #fff;
}

.list-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgb(232, 232, 232);
  font: 14px;
  height: 40px;
  padding-left: 20px;
  padding-right: 20px;
}

.list-item-hover {
  background-color: #e8e8e8;
}

.list-item-right {
  width: 20px;
  height: 20px;
}

.white-bg {
  background-color: #fff;
}

.gray-bg {
  background-color: #f8f8f8;
}

.red-bg {
  background-color: #d81e06;
}

.wx-navigator {
  display: flex;
  justify-content: space-between;
  height: 40px;
  padding-left: 20px;
  padding-right: 20px;
  align-items: center;
  border-bottom: 1px solid rgb(232, 232, 232);
}
.wx-navigator-hover{
  background-color: #e8e8e8;
}

.image-20{
  width: 20px;
  height: 20px;
}
.image-40{
  width: 40px;
  height: 40px;
}

.grow{
  flex-grow: 1;
}


.ellipsis{
  text-overflow:ellipsis;overflow:hidden;white-space:nowrap;
  width: 80%;
}

.load-more{
  text-align: center;
  padding: 10px;
}
.load-more-hover{
  background-color: #ddd;
}